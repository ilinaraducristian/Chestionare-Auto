{
  "name": "chestionare-auto-backend",
  "version": "0.0.1",
  "description": "",
  "author": "Reydw",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "env NODE_ENV=development nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build:prod": "rimraf dist && npm run build",
    "start:prod": "env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "postinstall": "npm run prestart:prod"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.13",
    "@nestjs/core": "^6.10.13",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-fastify": "^6.10.13",
    "@types/jsonwebtoken": "^8.3.5",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.7.1",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.10.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^23.3.13",
    "@types/mongodb": "^3.3.14",
    "@types/mongoose": "^5.5.36",
    "@types/node": "^10.17.13",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.12.1",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
